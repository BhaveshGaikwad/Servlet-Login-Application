<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!-- Servlet Decl.  -->
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.servlets.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForgotPass</servlet-name>
        <servlet-class>com.servlets.ForgotPass</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForgotPassOTP</servlet-name>
        <servlet-class>com.servlets.ForgotPassOTP</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>otpcheck</servlet-name>
        <servlet-class>com.servlets.otpcheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FirstLogin</servlet-name>
        <servlet-class>com.servlets.FirstLogin</servlet-class>
    </servlet>
        <servlet>
        <servlet-name>Profile</servlet-name>
        <servlet-class>com.servlets.Profile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>otpcheck</servlet-name>
        <url-pattern>/otpcheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FirstLogin</servlet-name>
        <url-pattern>/FirstLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
        <servlet-mapping>
        <servlet-name>Profile</servlet-name>
        <url-pattern>/Profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgotPass</servlet-name>
        <url-pattern>/ForgotPass</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgotPassOTP</servlet-name>
        <url-pattern>/ForgotPassOTP</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
